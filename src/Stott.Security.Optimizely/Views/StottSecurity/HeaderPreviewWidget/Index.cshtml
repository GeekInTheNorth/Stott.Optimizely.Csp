@using Stott.Security.Optimizely.Extensions
@using Stott.Security.Optimizely.Features.Preview
@model HeaderPreviewWidgetViewModel

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <title>Stott Security | @Model.Version</title>
    <link href="@Model.CssPath" rel="stylesheet" />
</head>
<body>
    <div class="container-fluid">
        <p><strong>Security Headers For:</strong> @Model.PageName</p>
        <p><strong>Can Extend The CSP:</strong> @Model.CanExtendTheContentSecurityPolicy.ToYesNo()</p>
        <p><strong>Extends The CSP:</strong> @Model.ExtendsTheContentSecurityPolicy.ToYesNo()</p>
    </div>
    @if (Model.SecurityHeaders is { Count: > 0 })
    {
        @foreach (var header in Model.SecurityHeaders)
        {
            <div class="container-fluid">
                <div class="mb-3 card">
                    <div class="bg-primary text-light card-header">@header.Key</div>
                    <div class="card-body">@header.Value</div>
                </div>
            </div>
        }
    }
    <script type="text/javascript" src="@Model.JavaScriptPath"></script>
</body>
</html>